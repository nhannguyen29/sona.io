{{#if user}}
	<h5>Welcome Back, {{user.username}}</h5>
	<ul class="alt">
        <li>
            <form action="/songs/search" method="post">
                <input type="text" name="keyword" value={{keyword}}>
                <button class="medium"><i class="fa fa-search"></i>Search</button>
            </form>
        </li>
	    <li><a href="/songs/mostfav">Most Favorite</a></li>
        <li><a href="/songs/upload">Upload a song</a></li>
	    <li><a href="/users/logout">Logout</a></li>
	</ul>
{{else}}
    <h5>Login</h5>
    <form method="post" action="/users/login">
        <label for="username">Username:</label><br>
        <input type="text" id="username" name="username"><br>
        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password"><br><br>
        <input class="button" type="submit" value="Submit">
    </form>
{{/if}}